  <div id="toast" class="rounded-md bg-gray-900 text-white px-4 py-2">Copied to clipboard</div>

  <script>
    // Pre-filled wallet addresses from user's context
    const wallets = {
      BTC: 'bc1q5p05kvg08apwll4uesvn4xt6hmjvkpmrg3837j',
      ETH: '0x46e9c2e162bc81fc69dc17579bab17557cbca9d2',
      USDT: '0x46e9c2e162bc81fc69dc17579bab17557cbca9d2',
      SOL: '9MraCk6Zv2Jv3nC5aDuBX8qmgq5wvzV8ZYB6MipeUSm8'
    };

    const currency = document.getElementById('currency');
    const addressInput = document.getElementById('address');
    const qrImg = document.getElementById('qr');
    const copyBtn = document.getElementById('copyBtn');
    const toast = document.getElementById('toast');

    function setCurrency(c){
      addressInput.value = wallets[c] || '';
      // QR via Google Chart API (simple)
      qrImg.src = 'https://chart.googleapis.com/chart?chs=200x200&cht=qr&chl=' + encodeURIComponent((wallets[c]||'')) + '&choe=UTF-8';
    }

    currency.addEventListener('change', e => setCurrency(e.target.value));
    setCurrency(currency.value);

    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(addressInput.value);
        toast.style.display='block';
        setTimeout(()=> toast.style.display='none', 1800);
      } catch(e){
        alert('Copy failed. Select the address and copy manually.');
      }
    });

    // Preset buttons (non-transactional UI)
    document.querySelectorAll('.donate-preset').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        document.getElementById('amount').value = btn.innerText;
      });
    });

    document.getElementById('openWalletBtn').addEventListener('click', ()=>{
      const cur = currency.value;
      const addr = wallets[cur];
      if(!addr) return alert('Address not available');
      // Try deep link for common wallets (basic)
      if(cur === 'BTC'){
        window.open('bitcoin:'+addr, '_blank');
      } else if(cur === 'ETH' || cur === 'USDT'){
        window.open('ethereum:'+addr, '_blank');
      } else if(cur === 'SOL'){
        window.open('https://explorer.solana.com/address/'+addr, '_blank');
      }
    });

    document.getElementById('doneBtn').addEventListener('click', ()=>{
      const tx = prompt('Paste transaction hash (optional) so we can track & thank you:');
      if(tx) alert('Thanks — we will verify and send recognition.');
      else alert('Thanks for supporting Pancono!');
    });
  </script>
</body>
